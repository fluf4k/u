[Unit]
Description= PKT POOL announcement handlers
After=network.target
StartLimitIntervalSec=0

[Service]
EnvironmentFile=/etc/pktpool/ah-num
Type=simple
Restart=always
RestartSec=1
User=root
LimitNOFILE=9999999
ExecStart=/usr/local/bin/pcm ah $aHnum -C /etc/pktpool/cfg.toml

[Install]
WantedBy=multi-user.target